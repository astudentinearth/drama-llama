# Express
PORT=4001
NODE_ENV=development
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# App auth (JWT or session not shown here; use your own middleware)
# For the demo, we simulate a user via a header. See auth.js
DEV_AUTH_SECRET=dev-only

# MinIO / S3-compatible
S3_ENDPOINT=localhost
S3_PORT=9000
S3_USE_SSL=false
S3_ACCESS_KEY=localminio
S3_SECRET_KEY=localminio123
S3_REGION=us-east-1

# Buckets
BUCKET_PUBLIC=public-avatars
BUCKET_PRIVATE=private-docs

# Limits
MAX_AVATAR_BYTES=5242880            # 5 MB
MAX_CV_BYTES=10485760               # 10 MB

# Presigned expiry
PUT_URL_EXP_SECS=300
GET_URL_EXP_SECS=120
