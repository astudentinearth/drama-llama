# Caching Service Environment Configuration
# Copy this file to .env and modify values as needed

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION=learning_materials

# Optional: For Qdrant Cloud or secured instances
# Leave empty for local development (no authentication required)
QDRANT_API_KEY=
QDRANT_URL=
QDRANT_USE_HTTPS=false

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_SIZE=384

# Search Configuration
SIMILARITY_THRESHOLD=0.85
MAX_SEARCH_RESULTS=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
API_TITLE=Caching Service API
API_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=INFO
